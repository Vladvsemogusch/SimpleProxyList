<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="8dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivThumbnail1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/image_margin"
            android:contentDescription="@string/album_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/ivThumbnail2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivThumbnail2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/image_margin"
            android:contentDescription="@string/album_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivThumbnail1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivThumbnail3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/image_margin"
            android:contentDescription="@string/album_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/ivThumbnail4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivThumbnail1" />

        <ImageView
            android:id="@+id/ivThumbnail4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/image_margin"
            android:contentDescription="@string/album_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ivThumbnail3"
            app:layout_constraintTop_toBottomOf="@+id/ivThumbnail1" />

        <TextView
            android:id="@+id/tvAlbumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivThumbnail4"
            tools:text="test" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>